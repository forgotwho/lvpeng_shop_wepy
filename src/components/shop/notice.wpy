      open({title, btnText, content}) {
        this.display = true;
        this.title = title;
        this.btnText = btnText;
        this.content = content
      },
      close() {
        this.display = false;
      }
    };
    components = {
      CoverPanel: CoverPanel
    };
  }
</script>

