    watch = {
      rule (rule) {
        if (rule.floorPrice && rule.goods.maxPrice) {
          this.saveNum = (rule.goods.maxPrice * 1 - rule.floorPrice * 1).toFixed(2);
        }
      }
    };
    mixins = [router, countdown];
  }
</script>

