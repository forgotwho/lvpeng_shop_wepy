<script>
  import wepy from 'wepy';
  import router from '../../mixins/router';
  import countdown from '../../mixins/countdown';

  export default class GoodsMsgBar extends wepy.component {
    props = {
      rule: {},
      saveText: {
        default: '砍价立省￥'
      },
      saveNum: {
        default: 0
      }
    };
    data = {
